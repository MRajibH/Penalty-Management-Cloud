<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Penalty Management System</title>
    <link rel="stylesheet" type="text/css"  href="styles.css">
</head>
<body>
    <header>
        <h1>Penalty Management System</h1>
        <a href="/add" class="add-btn">Add New Penalty</a>
    </header>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Penalty</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% penalties.forEach(penalty => { %>
                <tr>
                    <td><%= penalty.name %></td>
                    <td><%= penalty.penalty %></td>
                    <td>$<%= penalty.amount %></td>
                    <td><%= penalty.status %></td>
                    <td>
                        <% if (penalty.status === 'Unpaid') { %>
                            <form action="/pay/<%= penalty.id %>" method="POST">
                                <button type="submit" class="pay-btn">Mark as Paid</button>
                            </form>
                        <% } %>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>

